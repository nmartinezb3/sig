{
    "root": true,
    "extends": ["airbnb-base", "plugin:react/recommended"],
    "env": {
       "es6": true,
       "node": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "ecmaFeatures": {
          "jsx": true
      }
    },
    "rules": {
      "valid-jsdoc": 2,
      "react/jsx-uses-react": 1,
      "react/jsx-no-undef": 2,
      "react/jsx-wrap-multilines": 2,
      "react/no-string-refs": 0,
      "react/prop-types": 0,
      "semi": 0,
      "max-len": 0,
      "arrow-body-style": 0,
      "object-curly-spacing": 0,
      "comma-dangle": 0,
      "no-case-declarations": 0,
      "no-shadow": 0,
      "no-else-return": 0,
      "no-lonely-if": 0,
      "no-debugger": 0,
      "class-methods-use-this": 0
    },
    "plugins": [
        "import",
        "react"
    ],
    "parser": "babel-eslint"
}
